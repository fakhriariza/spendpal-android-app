<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="180dp"
android:layout_height="200dp">

    <LinearLayout
        android:id="@+id/lv_item"
        android:layout_width="170dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/item_background"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_listName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/poppins_semibold"
            android:text="Rp56.000"
            android:textColor="@color/SpendPal_DarkBlue"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/tv_spendingMerchant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/poppins_semibold"
            android:includeFontPadding="false"
            android:text="Starbucks"
            android:textColor="@color/SpendPal_DarkBlue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_spendingMerchantSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/poppins_medium"
            android:includeFontPadding="false"
            android:text="Cafe Latte"
            android:textColor="@color/SpendPal_DarkBlue"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_iconCategory"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/ic_plus"/>

            <TextView
                android:id="@+id/tv_Category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="Food"
                android:fontFamily="@font/poppins_medium"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/iv_circleBackground"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/circle_background"
        android:elevation="2dp"
        android:ellipsize="end"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_iconSpending"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_home" />

    </RelativeLayout>
</RelativeLayout>